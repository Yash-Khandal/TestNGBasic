<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="AllLoansWithFilters" verbose="1">

  <!-- 1.  ONLY  ‘web’  group  (from day2 + day3)  -->
  <test name="IncludeWebOnly">
    <groups>
      <run>
        <include name="web"/>
      </run>
    </groups>
    <classes>
      <class name="test.day2"/>
      <class name="test.day3"/>
      <class name="test.day4"/>
    </classes>
  </test>

  <!-- 2.  EXCLUDE  ‘mobile’  group  (keeps web + api)  -->
  <test name="ExcludeMobile">
    <groups>
      <run>
        <exclude name="mobile"/>
      </run>
    </groups>
    <classes>
      <class name="test.day2"/>
      <class name="test.day3"/>
      <class name="test.day4"/>
    </classes>
  </test>

  <!-- 3.  REGEX  – any group that starts with ‘h’  (hello, home-loan-web …)  -->
  <test name="RegexStartsWithH">
    <groups>
      <run>
        <include name="h.*"/>
      </run>
    </groups>
    <classes>
      <class name="test.day2"/>
      <class name="test.day3"/>
      <class name="test.day4"/>
    </classes>
  </test>

  <!-- 4.  MIX  – include ‘hello’  but  exclude  ‘morning’  (only sayHello() runs)  -->
  <test name="IncludeHelloExcludeMorning">
    <groups>
      <run>
        <include name="hello"/>
        <exclude name="morning"/>
      </run>
    </groups>
    <classes>
      <class name="test.day4"/>
    </classes>
  </test>

</suite>